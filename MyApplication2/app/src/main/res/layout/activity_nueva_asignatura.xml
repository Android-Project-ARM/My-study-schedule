<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.marcelba.mystudyschedule.NewSubject"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/TvAsignatura"
        android:id="@+id/TvAsignatura" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EtAsignatura"
        android:singleLine="true"
        android:layout_alignRight="@+id/SpDia01" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/TvProfesor"
        android:id="@+id/TvProfesor" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EtProfesor"
        android:singleLine="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/TvHorario"
        android:id="@+id/TvHorrario"
        android:singleLine="false"

        android:paddingTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/weekDay"
        android:id="@+id/textView3"

        android:paddingTop="@dimen/topPadding"/>

    <Spinner
       android:layout_width="wrap_content"
       android:layout_height="20dp"
       android:id="@+id/SpDia01"
      />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/startTime"
        android:id="@+id/TvHoraInical"

        android:paddingTop="@dimen/topPadding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Spinner
       android:layout_width="50dp"
       android:layout_height="20dp"
       android:id="@+id/SpHoraInicio01"
      />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=":"
        android:id="@+id/tvPuntos01"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <Spinner
          android:layout_width="50dp"
          android:layout_height="20dp"
        android:id="@+id/SpMinutosInicio01" />
    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/endTime"
            android:id="@+id/tvHoraFIn"
            android:paddingTop="@dimen/topPadding"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:id="@+id/SpHoraFinal01"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=":"
            android:id="@+id/tvPuntos02"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

        <Spinner
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:id="@+id/SpMinutosFinal01"/>
    </LinearLayout>

</LinearLayout>
