<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.marcelba.mystudyschedule.NewSubject"
    android:animateLayoutChanges="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/TvAsignatura"
        android:id="@+id/TvAsignatura"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EtAsignatura"
        android:layout_below="@+id/TvAsignatura"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:layout_alignRight="@+id/SpDia01" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/TvProfesor"
        android:id="@+id/TvProfesor"
        android:layout_below="@+id/EtAsignatura"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EtProfesor"
        android:layout_below="@+id/TvProfesor"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:layout_alignRight="@+id/EtAsignatura"
        android:layout_alignEnd="@+id/EtAsignatura" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/TvHorario"
        android:id="@+id/TvHorrario"
        android:singleLine="false"
        android:layout_below="@+id/EtProfesor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Día"
        android:id="@+id/textView3"
        android:layout_below="@+id/TvHorrario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="@dimen/topPadding"/>

    <Spinner
       android:layout_width="wrap_content"
       android:layout_height="20dp"
       android:id="@+id/SpDia01"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hora de inicio"
        android:id="@+id/TvHoraInical"
        android:layout_below="@+id/SpDia01"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="@dimen/topPadding" />

    <Spinner
       android:layout_width="50dp"
       android:layout_height="20dp"
       android:id="@+id/SpHoraInicio01"
        android:layout_above="@+id/SpHoraFinal01"
        android:layout_toRightOf="@+id/TvHoraInical"
        android:layout_toEndOf="@+id/TvHoraInical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=":"
        android:id="@+id/tvPuntos01"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_alignTop="@+id/SpHoraInicio01"
        android:layout_toRightOf="@+id/SpHoraInicio01"
        android:layout_toEndOf="@+id/SpHoraInicio01" />

    <Spinner
          android:layout_width="50dp"
          android:layout_height="20dp"
          android:id="@+id/SpMinutosInicio01"
        android:layout_alignTop="@+id/tvPuntos01"
        android:layout_toRightOf="@+id/tvPuntos01"
        android:layout_toEndOf="@+id/tvPuntos01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Hora de finalilación"
            android:id="@+id/tvHoraFIn"
            android:paddingTop="@dimen/topPadding"
            android:layout_below="@+id/SpHoraInicio01"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:id="@+id/SpHoraFinal01"
            android:layout_below="@+id/TvHoraInical"
            android:layout_toRightOf="@+id/tvHoraFIn"
            android:layout_toEndOf="@+id/tvHoraFIn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=":"
            android:id="@+id/tvPuntos02"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignBottom="@+id/tvHoraFIn"
            android:layout_toRightOf="@+id/SpHoraFinal01"
            android:layout_toEndOf="@+id/SpHoraFinal01" />

        <Spinner
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:id="@+id/SpMinutosFinal01"
            android:layout_alignTop="@+id/tvPuntos02"
            android:layout_toRightOf="@+id/tvPuntos02"
            android:layout_toEndOf="@+id/tvPuntos02" />


</RelativeLayout>
