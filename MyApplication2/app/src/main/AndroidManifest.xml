<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marcelba.mystudyschedule" >
    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Inicio"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_ajustes"
            android:parentActivityName=".Inicio" >
        </activity>
        <activity
            android:name=".Horary"
            android:label="@string/title_activity_horario"
            android:parentActivityName=".Inicio" >
        </activity>
        <activity
            android:name=".Subjects"
            android:label="@string/title_activity_asignaturas"
            android:parentActivityName=".Inicio" >
        </activity>
        <activity
            android:name=".Tasks"
            android:label="@string/title_activity_tareas"
            android:parentActivityName=".Inicio" >
        </activity>
        <activity
            android:name=".Evaluation"
            android:label="@string/title_activity_evaluacion"
            android:parentActivityName=".Inicio" >
        </activity>
        <activity
            android:name=".DetailsSubject"
            android:label="@string/title_activity_detalle_asignatura"
            android:parentActivityName=".Subjects" >
        </activity>
        <activity
            android:name=".NewSubject"
            android:label="@string/title_activity_nueva_asignatura" >
        </activity>
        <activity
            android:name=".NewTask"
            android:label="@string/title_activity_nueva_tarea" >
        </activity>
        <activity
            android:name=".detalle_tareas"
            android:label="@string/title_activity_detalle_tareas" >
        </activity>
    </application>

</manifest>
